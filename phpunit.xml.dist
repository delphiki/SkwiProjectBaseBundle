<?xml version="1.0" encoding="UTF-8"?>

<!-- http://www.phpunit.de/manual/current/en/appendixes.configuration.html -->
<phpunit
    backupGlobals               = "false"
    backupStaticAttributes      = "false"
    colors                      = "true"
    convertErrorsToExceptions   = "true"
    convertNoticesToExceptions  = "true"
    convertWarningsToExceptions = "true"
    processIsolation            = "false"
    stopOnFailure               = "false"
    syntaxCheck                 = "false"
    bootstrap                   = "Skwi/Bundle/ProjectBaseBundle/Tests/bootstrap.php" >

    <testsuites>
        <testsuite name="SkwiProjectBaseBundle Test Suite">
            <directory>Skwi/Bundle/ProjectBaseBundle/Tests</directory>
        </testsuite>
    </testsuites>


    <filter>
        <whitelist>
            <directory>../src</directory>
            <exclude>
                <directory>Skwi/Bundle/ProjectBaseBundle/Resources</directory>
                <directory>Skwi/Bundle/ProjectBaseBundle/Tests</directory>
            </exclude>
        </whitelist>
    </filter>

</phpunit>
